<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#ff070707"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Your Course"
        android:id="@+id/textView2"
        android:layout_gravity="center_horizontal"
        android:textSize="30dp"
        android:textColor="#ffffffff"
        android:textStyle="bold"
        android:layout_marginTop="10dp" />

    <Spinner
        android:layout_width="181dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:spinnerMode="dropdown"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:background="#ffffffff" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" New Text"
        android:id="@+id/textView"
        android:layout_marginTop="20dp"
        android:paddingBottom="15dp"
        android:textColor="#ffffffff"
        android:textSize="25dp"
        android:paddingLeft="120dp"
        android:paddingTop="20dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_marginTop="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:text="SEMESTER NUMBER"
            android:id="@+id/semtex"
            android:textSize="20dp"

            android:layout_alignTop="@+id/semester"
            android:layout_alignStart="@+id/course"
            android:layout_weight="0.34"
            android:background="#ffffffff"
            android:layout_marginLeft="5dp"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:paddingRight="15dp"
            android:textColor="#c1565656"
            android:textStyle="bold" />

        <EditText
            android:layout_width="33dp"
            android:layout_height="wrap_content"

            android:inputType="text"
            android:ems="10"
            android:id="@+id/semester"

            android:textSize="18dp"

            android:text=" "
            android:background="#ffffffff"
            android:textColor="#c1565656"
            android:paddingBottom="15dp"
            android:layout_marginBottom="26dp"

            android:layout_above="@+id/course"

            android:layout_toEndOf="@+id/textView"
            android:layout_alignEnd="@id/course"
            android:layout_marginTop="40dp"
            android:layout_gravity="right"
            android:layout_marginLeft="70dp"
            android:paddingTop="10dp"
            android:layout_weight="0.15" />

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SEARCH"
        android:id="@+id/button"
        android:layout_marginTop="80dp"
        android:background="#ffff6e13"
        android:textColor="#ffffffff"
        android:textStyle="bold"
        android:padding="5dp"
        android:layout_weight="0.06" />


</LinearLayout>
